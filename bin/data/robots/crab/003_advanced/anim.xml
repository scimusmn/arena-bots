<animation>
  <step type="move" time="0">
    <pos type="mouse" />
  </step>
#click open the second sidebar
  <step type="move" speed="500">
    <pos type="obj" where="sidebar[1]" x="20" y="20" />
  </step>
  <step type="clickDown" time=".25" />
  <step type="clickUp" time=".25" />
#pickup the fourth block in the second sidebar
  <step type="move" speed="500">
    <pos type="obj" where="sidebar[1][3]" x="20" y="20"/>
  </step>
  <step type="clickDown" time=".25" />
#drop it below the base
  <step type="move" speed="500">
    <pos type="obj" where="base" x="20" y="h+30" />
  </step>
  <step type="clickUp" time=".25" />
#move to the first bar of the sidebar
  <step type="move" speed="500">
    <pos type="obj" where="sidebar[0]" x="20" y="20" />
  </step>
#click the bar
  <step type="clickDown" time=".25" />
  <step type="clickUp" time=".25" />
#move to the first block
  <step type="move" speed="500">
    <pos type="obj" where="sidebar[0][0]" x="20" y="20"/>
  </step>
#click and drag to the inside of the repeat block
  <step type="clickDown" time=".25" />
  <step type="move" speed="500">
    <pos type="obj" where="base[0]" x="20" y="h-30" />
  </step>
  <step type="clickUp" time=".25" />
#move to the dropdown on the first block on the base
  <step type="move" speed="500">
    <pos type="obj" where="base[0][i0][d0]" x="w/2" y="h/2"/>
  </step>
  <step type="clickDown" time=".25" />
  <step type="clickUp" time=".25" />
  <step type="move" speed="500">
    <pos type="obj" where="base[0][i0][d0]" x="w/2" y="h*1.5"/>
  </step>
  <step type="clickDown" time=".5" />
  <step type="clickUp" time=".5" />
#move back to the sidebar and click the block again
  <step type="move" speed="500">
    <pos type="obj" where="sidebar[0][0]" x="20" y="20"/>
  </step>
  <step type="clickDown" time=".25" />
#drag the block back onto the previous block
  <step type="move" speed="500">
    <pos type="obj" where="base[0][i0]" x="20" y="h+20" />
  </step>
  <step type="clickUp" time=".25" />
#click open the second sidebar
  <step type="move" speed="500">
    <pos type="obj" where="sidebar[1]" x="20" y="20" />
  </step>
  <step type="clickDown" time=".25" />
  <step type="clickUp" time=".25" />
#pickup the second block in the second sidebar
  <step type="move" speed="500">
    <pos type="obj" where="sidebar[1][1]" x="20" y="20"/>
  </step>
  <step type="clickDown" time=".25" />
#drop it below the first block on the base
  <step type="move" speed="500">
    <pos type="obj" where="base[0][i0]" x="20" y="h+20" />
  </step>
  <step type="clickUp" time=".25" />
#move to the dropdown on the first block on the base
  <step type="move" speed="500">
    <pos type="obj" where="base[0][i1][d0]" x="w/2" y="h/2"/>
  </step>
  <step type="clickDown" time=".25" />
  <step type="clickUp" time=".25" />
  <step type="move" speed="500">
    <pos type="obj" where="base[0][i1][d0]" x="w/2" y="h*1.5"/>
  </step>
  <step type="clickDown" time=".25" />
  <step type="clickUp" time=".25" />
#pick it up again
  <step type="move" speed="500">
    <pos type="obj" where="sidebar[1][1]" x="20" y="20"/>
  </step>
  <step type="clickDown" time=".25" />
#drop it under the third block on the base
  <step type="move" speed="500">
    <pos type="obj" where="base[0][i2]" x="20" y="h+20" />
  </step>
  <step type="clickUp" time=".25" />
#move to the dropdown on the first block on the base
  <step type="move" speed="500">
    <pos type="obj" where="base[0][i3][d0]" x="w/2" y="h/2"/>
  </step>
  <step type="clickDown" time=".25" />
  <step type="clickUp" time=".25" />
  <step type="move" speed="500">
    <pos type="obj" where="base[0][i3][d0]" x="w/2" y="h*1.5"/>
  </step>
  <step type="clickDown" time=".25" />
  <step type="clickUp" time=".25" />
#click open the third sidebar
  <step type="move" speed="500">
    <pos type="obj" where="sidebar[2]" x="20" y="20" />
  </step>
  <step type="clickDown" time=".25" />
  <step type="clickUp" time=".25" />
#grab a conditional block
  <step type="move" speed="500">
    <pos type="obj" where="sidebar[2][0]" x="20" y="20"/>
  </step>
  <step type="clickDown" time=".25" />
#drop it below the first block on the base
  <step type="move" speed="500">
    <pos type="obj" where="base[0][i3]" x="20" y="h+20" />
  </step>
  <step type="clickUp" time=".25" />
#click open the first sidebar
  <step type="move" speed="500">
    <pos type="obj" where="sidebar[0]" x="20" y="20" />
  </step>
  <step type="clickDown" time=".25" />
  <step type="clickUp" time=".25" />
#grab a conditional block
  <step type="move" speed="500">
    <pos type="obj" where="sidebar[0][3]" x="20" y="20"/>
  </step>
  <step type="clickDown" time=".25" />
#drop it below the first block on the base
  <step type="move" speed="500">
    <pos type="obj" where="base[0][i4]" x="20" y="h-30" />
  </step>
  <step type="clickUp" time=".25" />
#move to the dropdown on the first block on the base
  <step type="move" speed="500">
    <pos type="obj" where="base[0][i4][i0][d0]" x="w/2" y="h/2"/>
  </step>
  <step type="clickDown" time=".25" />
  <step type="clickUp" time=".25" />
  <step type="move" speed="500">
    <pos type="obj" where="base[0][i4][i0][d0]" x="w/2" y="h*1.5"/>
  </step>
  <step type="clickDown" time=".25" />
  <step type="clickUp" time=".25" />
#move to the upload button and click it.
  <step type="move" speed="500">
    <pos type="obj" where="upload" x="w/2" y="h/2" />
  </step>
  <step type="clickDown" time=".25" />
  <step type="clickUp" time=".25" />
  <step type="move" speed="500">
    <pos type="mouse" />
  </step>
</animation>