<blocks font="ArialNarrow.ttf" title="Rockin Crustacean" xmlns:blck="http://www.smm.org/">
	<bar name="Action blocks" color="0x993399">
		<block name="right claw %d">
			<type>p</type>
            <dropdown>
                <dds>OPEN</dds>
                <dds>CLOSE</dds>
            </dropdown>
			<file>rclaw.blk</file>
			<part>right claw click</part>
			<part>if right claw open</part>
		</block>
		<block name="left claw %d">
            <dropdown>
                <dds>OPEN</dds>
                <dds>CLOSE</dds>
            </dropdown>
			<file>lclaw.blk</file>
			<part>left claw click</part>
		</block>
		<block name="shake speed %d">
			<dropdown>
				<dds>STOP</dds>
        <dds>SLOW</dds>
				<dds>FAST</dds>
            </dropdown>
			<file>shake.blk</file>
		</block>
		<block name="eye color %d">
            <dropdown>
                <dds>RED</dds>
                <dds>GREEN</dds>
                <dds>BLUE</dds>
                <dds>OFF</dds>
            </dropdown>
			<file>eyes.blk</file>
            <part>eye color shift</part>
		</block>
    <block name="play sound %d">
      <dropdown>
        <dds>OFF</dds>
        <dds>CLICK</dds>
        <dds>BOING</dds>
      </dropdown>
      <file>playSound.blk</file>
    </block>
	</bar>
	<bar name="Timing blocks" color="0xFF6600">
		<block name="for %d seconds">
			<type>c</type>
			<bracket>1</bracket>
            <dropdown>
                <ddlow>0</ddlow>
                <ddhigh>10</ddhigh>
            </dropdown>
			<file>forSeconds.blk</file>
		</block>
		<block name="wait %d second">
      <dropdown>
          <ddlow>0</ddlow>
          <ddhigh>5</ddhigh>
      </dropdown>
			<file>delay.blk</file>
		</block>
		<block name="repeat %d times">
			<type>F</type>
			<bracket>1</bracket>
            <dropdown>
                <ddlow>0</ddlow>
                <ddhigh>10</ddhigh>
                <ddsteps>11</ddsteps>
            </dropdown>
			<file>repeat.blk</file>
		</block>
		<block name="forever">
			<bracket>1</bracket>
			<file>forever.blk</file>
		</block>
	</bar>
	<bar name="Conditional blocks" color="896016">
		<block name="if button pressed">
			<bracket>1</bracket>
			<file>ifBP.blk</file>
		</block>
    <block name="if right claw open">
      <bracket>1</bracket>
      <file>ifROpen.blk</file>
			<part>right claw click</part>
			<part>right claw</part>
    </block>
		<block name="if left claw open">
      <bracket>1</bracket>\
      <file>ifLOpen.blk</file>
			<part>left claw click</part>
			<part>left claw</part>
    </block>
	</bar>
</blocks>
	