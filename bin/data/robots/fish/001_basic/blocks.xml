<blocks font="ArialNarrow.ttf" name="FishBot" subtitle="Basic: Connect example instruction blocks" xmlns:blck="http://www.smm.org/">
	<bar name="Examples" color="883710">
    <block name="move flipper %d" color="0x993399">
      <dropdown>
          <dds>LEFT</dds>
          <dds>RIGHT</dds>
          <selected>LEFT</selected>
      </dropdown>
      <file>flip.blk</file>
      <blocksOn>
        <block name="wait %d second" color="0xFF6600">
          <type>d</type>
          <dropdown>
            <ddlow>0</ddlow>
            <ddhigh>5</ddhigh>
            <selected>1</selected>
          </dropdown>
          <file>delay.blk</file>
        </block>
        <block name="move flipper %d" color="0x993399">
          <type>p</type>
          <dropdown>
              <dds>LEFT</dds>
              <dds>RIGHT</dds>
              <selected>RIGHT</selected>
          </dropdown>
          <file>flip.blk</file>
        </block>
        <block name="wait %d second" color="0xFF6600">
          <type>d</type>
          <dropdown>
            <ddlow>0</ddlow>
            <ddhigh>5</ddhigh>
            <selected>1</selected>
          </dropdown>
          <file>delay.blk</file>
        </block>
      </blocksOn>
    </block>
    <block name="move tail %d" color="0x993399">
      <type>p</type>
      <dropdown>
          <dds>LEFT</dds>
          <dds>RIGHT</dds>
          <selected>LEFT</selected>
      </dropdown>
      <file>tail.blk</file>
      <blocksOn>
				<block name="wait %d second" color="0xFF6600">
					<type>d</type>
					<dropdown>
						<ddlow>0</ddlow>
						<ddhigh>1</ddhigh>
						<selected>1</selected>
					</dropdown>
					<file>delay.blk</file>
				</block>
				<block name="move tail %d" color="0x993399">
          <type>p</type>
          <dropdown>
              <dds>LEFT</dds>
              <dds>RIGHT</dds>
              <selected>RIGHT</selected>
          </dropdown>
          <file>tail.blk</file>
        </block>
				<block name="wait %d second" color="0xFF6600">
					<type>d</type>
					<dropdown>
						<ddlow>0</ddlow>
						<ddhigh>1</ddhigh>
						<selected>1</selected>
					</dropdown>
					<file>delay.blk</file>
				</block>
			</blocksOn>
		</block>
    <block name="wriggle speed %d" color="0x993399">
      <type>g</type>
      <dropdown>
        <dds>STOP</dds>
        <dds>SLOW</dds>
        <dds>FAST</dds>
        <selected>FAST</selected>
      </dropdown>
      <file>wriggle.blk</file>
      <blocksOn>
				<block name="wait %d second" color="0xFF6600">
					<type>d</type>
					<dropdown>
						<ddlow>0</ddlow>
						<ddhigh>1</ddhigh>
						<selected>1</selected>
					</dropdown>
					<file>delay.blk</file>
				</block>
				<block name="wriggle speed %d" color="0x993399">
          <type>g</type>
          <dropdown>
            <dds>STOP</dds>
            <dds>SLOW</dds>
            <dds>FAST</dds>
            <selected>STOP</selected>
          </dropdown>
          <file>wriggle.blk</file>
        </block>
			</blocksOn>
		</block>
    <block name="play sound %d" color="0x993399">
      <dropdown>
          <dds>NONE</dds>
          <dds>GLUB</dds>
          <dds>BUBBLE</dds>
          <selected>GLUB</selected>
      </dropdown>
      <file>playSound.blk</file>
      <blocksOn>
				<block name="wait %d second" color="0xFF6600">
					<type>d</type>
					<dropdown>
						<ddlow>0</ddlow>
						<ddhigh>5</ddhigh>
						<selected>2</selected>
					</dropdown>
					<file>delay.blk</file>
				</block>
				<block name="play sound %d" color="0x993399">
          <dropdown>
              <dds>NONE</dds>
              <dds>GLUB</dds>
              <dds>BUBBLE</dds>
              <selected>NONE</selected>
          </dropdown>
          <file>playSound.blk</file>
        </block>
			</blocksOn>
		</block>
	</bar>
</blocks>
	